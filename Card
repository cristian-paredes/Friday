public class Card
{
    public String name;
    
    /**
     * Creates the card object
     */  
    public void Card()
    {
    
    }
    /**
     * Enables the special ability that each card has
     */
    public void enableAbility(){}
    
    public int getFightVal()
    {
        return fightValue;
    }
}

